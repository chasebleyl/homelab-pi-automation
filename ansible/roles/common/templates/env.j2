# Environment variables for {{ app_name }}
# Deployed by Ansible from root .env file

# Discord Bot
DISCORD_TOKEN={{ discord_token }}
{% if test_guild_id %}
TEST_GUILD_ID={{ test_guild_id }}
{% endif %}

# Predecessor API
PRED_GG_API_URL={{ pred_gg_api_url }}
{% if pred_gg_oauth_api_url %}
PRED_GG_OAUTH_API_URL={{ pred_gg_oauth_api_url }}
{% endif %}
{% if pred_gg_client_id %}
PRED_GG_CLIENT_ID={{ pred_gg_client_id }}
{% endif %}
{% if pred_gg_client_secret %}
PRED_GG_CLIENT_SECRET={{ pred_gg_client_secret }}
{% endif %}

# Database
DATABASE_URL={{ database_url }}
DB_HOST={{ postgres_host }}
DB_PORT={{ postgres_port }}
DB_NAME={{ postgres_db }}
DB_SCHEMA={{ postgres_schema }}
DB_USER={{ postgres_user }}
DB_PASSWORD={{ postgres_password }}

# Belica Bot HTTP endpoint
BELICA_BOT_URL={{ belica_bot_url }}
BELICA_BOT_HOST={{ belica_bot_host }}
BELICA_BOT_PORT={{ belica_bot_port }}
